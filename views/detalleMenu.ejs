<!DOCTYPE html>
<html>
  <head>
    <title><%- product.title + " - Pimienta & Sal" %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include("./partials/navbar")%>

    <!-- Header -->
    <%- include("./partials/header")%>

    <!-- Page content -->
    <div class="ps-content">
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%- product.title %></h1>
          <br />
          <h4><%- product.description || "Plato tipico" %></h4>
          <p class="ps-text-grey">U$S <%- product.price %></p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%- product.image %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <hr />
      <!-- About Section -->
      <%- include("./partials/about")%>

      <!-- Footer -->
      <%- include("./partials/footer")%>
    </div>
  </body>
</html>
